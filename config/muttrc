color signature cyan black
color index green black '~n 50-59' 
color index brightgreen black '~n 60-79' 
color index brightyellow black '~n 80-89' 
color index red black '~n 90-99' 
color index brightred black '~n 100-'
color index brightblue black '~T' # Tagged
color index magenta black '~D' # Deleted
color index yellow black '~F' # Flagged
color index green black '~U' # New
color sidebar_new cyan black

set delete
unset confirmappend
set sleep_time=0
set move=no

set pager_index_lines=10
set charset="utf-8"
